<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <% @column.each do |col| %>
        <th><%= link_to col, :sort => col %></th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% @column.each do |col| %>
        <td><%= post[col] %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
